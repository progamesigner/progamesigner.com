{
  "name": "progamesigner.com",
  "description": "progamesigner.com",
  "keywords": [
    "progamesigner",
    "hugo",
    "scss"
  ],
  "author": "Yang Sheng Han <progamesigner@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/progamesigner/progamesigner.com.git"
  },
  "scripts": {
    "build": "npx webpack-cli --mode development",
    "build:prod": "npx webpack-cli --mode production",
    "build:watch": "npx webpack-cli --mode development --watch",
    "deploy": "npm run build && npm run hugo",
    "deploy:prod": "npm run build:prod && npm run hugo:prod",
    "hugo": "hugo --buildDrafts --buildFuture --environment development",
    "hugo:prod": "hugo --environment production --enableGitInfo --minify",
    "hugo:watch": "hugo serve --buildDrafts --buildFuture --environment development"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "bulma": "^0.7.5",
    "css-loader": "^2.1.1",
    "cssnano": "^4.1.10",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.13.0",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^7.3.1",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  }
}
